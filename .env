# .env
# Configuración del MCP Attack Lab

# ============================================
# Puertos
# ============================================
MCP_SERVER_PORT=8000
OLLAMA_PORT=11434
LLM_GATEWAY_PORT=8502

# ============================================
# Configuración de Logging
# ============================================
LOG_LEVEL=INFO
LOG_DIR=./logs

# ============================================
# Configuración del LLM
# ============================================
DEFAULT_MODEL=llama3.2
TEMPERATURE=0.7
MAX_TOKENS=2048

# ============================================
# Configuración de Red
# ============================================
NETWORK_SUBNET=172.20.0.0/16

# ============================================
# Configuración de AIDR (Simulación)
# ============================================
AIDR_ENABLED=true
AIDR_MODE=monitor
# Modos disponibles:
# - monitor: Solo detecta y registra
# - block: Detecta y bloquea
# - disabled: Desactivado

# ============================================
# Umbrales de Riesgo AIDR
# ============================================
AIDR_RISK_LOW=30
AIDR_RISK_MEDIUM=50
AIDR_RISK_HIGH=70

# ============================================
# Configuración Opcional
# ============================================
# API_KEY_ENABLED=false
# API_KEY=your-secret-key-here

# Rate Limiting (para testing)
# RATE_LIMIT_ENABLED=false
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW=60

# ============================================
# Configuración de Desarrollo
# ============================================
DEBUG=false
RELOAD=false
